<body>
    <div class="container">
        <h1>Students</h1>
        <a href="/student/AddStudent" class="btn btn-secondary" role="button">Add Student</a>
        <br /><br />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>ID</th>
                    <th>Age</th>
                    <th>Department ID</th>
                    <th>Drpartment Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Students)
                {
                    Department department = Model.Departments.FirstOrDefault(x => x.Id == item.DepatmentId);
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Id</td>
                        <td>@item.Age</td>
                        <td>@item.DepatmentId</td>
                        <td>@department.Name</td>


                        <td class="action-btns">
                            <a href="/student/GetStudent/@item.Id" class="btn btn-success" role="button">Show Info</a>
                            <a href="/student/RemoveStudentActiual/@item.Id" class="btn btn-danger" role="button">Remove</a>
                            <a href="/student/UpdateStudent/@item.Id" class="btn btn-info" role="button">Update</a>
                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
</body>
